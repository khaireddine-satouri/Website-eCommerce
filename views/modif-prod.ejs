<%- include('layouts/head.ejs')%>

    <body>
        <%- include('layouts/navigation.ejs')%>
            <div class="container">
                <div class="row">
                    <%- include('layouts/sidebar.ejs')%>
                        <div class="col-lg-9">
                            <br>
                            <br>
                            <div class="row">
                                <div class="col-sm-12">
                                    <h2>Modifier un produit</h2>
                                    <form action="/admin/modif-prod" method="POST">
                                        <input type="hidden" name="id" value="<%= lprod._id%>">
                                        <div class="form-group">
                                            <label for="titre">Titre :</label>
                                            <input class="form-control" id="titre" name="titre" value="<%= lprod.titre%>">
                                        </div>
                                        <div class="form-group">
                                            <label for="prix">Prix :</label>
                                            <input class="form-control" id="prix" name="prix" value="<%= lprod.prix%>">
                                        </div>
                                        <div class="form-group">
                                            <label for="image">Lien de l'image :</label>
                                            <input class="form-control" id="image" name="image" value="<%= lprod.image%>">
                                        </div>
                                        <div class="form-group">
                                            <label for="description">Description :</label>
                                            <textarea class="form-control" name="description" id="description"><%= lprod.description%></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Modifier</button>
                                    </form>
                                    <br>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
            <%- include('layouts/footer.ejs')%>